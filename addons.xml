<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.playerwiz" name="Players wizard" version="0.0.2" provider-name="Players klub">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Players wizard</summary>
    <description lang="en">Players klub wizard</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.playklub"
       name="[COLOR gold]THE PLAYERS KLUB[/COLOR]"
       version="4.8"
       provider-name="pipcan">
  <requires>
        <import addon="script.module.requests"/>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en"></summary>
    <language>en</language>
    <description lang="en"></description>
     <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.playersklub" name="[COLOR red ]THE PLAYERS KLUB[/COLOR] Repository" version="1.1.2" provider-name="THEPLAYERSKLUB">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="playersklub">
            <info compressed="false">https://github.com/gebtec/The-Players-Klub/blob/master/addons.xml</info>
            <checksum>https://github.com/gebtec/The-Players-Klub/blob/master/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/gebtec/The-Players-Klub</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Install My Addons</summary>
            <description>Download and install addons THE PLAYERS KLUB</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
